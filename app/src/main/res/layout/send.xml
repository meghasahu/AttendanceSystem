<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Send The Record"
        android:textSize="22sp"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="defaulters"
        android:checked="true"
        android:layout_centerHorizontal="true"
       android:layout_above="@+id/checkother"
        android:id="@+id/checkbox1"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mail to others"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkother"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/checkbox1"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:id="@+id/email"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendmail"
        android:text="send mail"
        android:layout_alignTop="@+id/sms"
        android:layout_toLeftOf="@+id/email"
        android:layout_toStartOf="@+id/email" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sms"
        android:text="send sms"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email" />
</RelativeLayout>